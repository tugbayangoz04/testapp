<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/babyblue"
    tools:context=".MainActivity"
    android:id="@+id/main">

    <!-- CardView ile Ana Kutu -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:layout_margin="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PDF Yükle"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@null"
                android:textColor="@android:color/white"
                android:layout_marginBottom="24dp" />

            <EditText
                android:id="@+id/editPrompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Prompt girin"
                android:inputType="textMultiLine"
                android:gravity="center"
                android:padding="8dp" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/btnCreateTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rounded_button"
                android:text="Test Oluştur"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnViewTests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Testleri Görüntüle"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
